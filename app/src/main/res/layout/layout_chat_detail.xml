<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tvQuestionTitleChatDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的提问：设备打开后少了一个螺丝"
            android:textColor="#FF333333"
            android:textSize="14sp"
            />

        <View
            style="@style/driver_h"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tvQuestionTimeChatDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="2018-01-01 08:18"
            android:textColor="#FF999999"
            android:textSize="10sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        >

        <TextView
            android:id="@+id/tvQuestionContextChatDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:minHeight="60dp"
            android:padding="10dp"
            android:text="设备打开后少了一个螺丝设备打开后少了一个螺丝设备打开少了一个螺丝设备打开后少了一个螺丝设备打开后少了一个螺丝设备打开后少了一个螺丝。"
            />

        <ImageView
            android:id="@+id/ivUserIconChatDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimaryDark"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rectReplyChatDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_chat_online"
            />

        <TextView
            android:id="@+id/tvReplyContextChatDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:minHeight="60dp"
            android:padding="10dp"
            android:text="设备打开后少了一个螺丝设备打开后少了一个螺丝设备打开少了一个螺丝设备打开后少了一个螺丝设备打开后少了一个螺丝设备打开后少了一个螺丝。"
            />


    </LinearLayout>
</LinearLayout>